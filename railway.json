{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "healthcheckPath": "/railway-health",
    "healthcheckTimeout": 1800,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "crypto-ai-bot",
      "port": 8000,
      "env": {
        "ENVIRONMENT": "production",
        "BACKEND_PORT": "8000"
      }
    }
  ]
} 